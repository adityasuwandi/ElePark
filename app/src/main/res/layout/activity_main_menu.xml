<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adityalaksana.elepark.mainMenu"
    android:background="#101c3d">

    <ImageButton
        android:layout_width="270dp"
        android:layout_height="93dp"
        android:id="@+id/imageButtonSet"
        android:scaleType="fitXY"
        android:src="@drawable/button"
        android:background="#00ffffff"
        android:onClick="sendMessage"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/imageButtonFind"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="270dp"
        android:layout_height="93dp"
        android:id="@+id/imageButtonFind"
        android:scaleType="fitXY"
        android:src="@drawable/button2"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:background="#3b4a93"
        android:layout_below="@+id/imageButtonFind"
        android:layout_marginTop="51dp"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="61dp"
            android:id="@+id/parkloc"
            android:text="Current Parking Location"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_below="@+id/imageButtonFind"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-black" />
    </LinearLayout>

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageButton"
        android:src="@drawable/settings"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="4dp" />

</RelativeLayout>


