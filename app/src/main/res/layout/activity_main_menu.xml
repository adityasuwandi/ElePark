<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adityalaksana.elepark.mainMenu"
    android:background="#101c3d">

    <ImageButton
        android:layout_width="270dp"
        android:layout_height="93dp"
        android:id="@+id/imageButtonSet"
        android:scaleType="fitXY"
        android:src="@drawable/button"
        android:background="#00ffffff"
        android:onClick="sendMessage"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/imageButtonFind"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="270dp"
        android:layout_height="93dp"
        android:id="@+id/imageButtonFind"
        android:scaleType="fitXY"
        android:src="@drawable/button2"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:background="#3b4a93"
        android:layout_below="@+id/imageButtonFind"
        android:layout_marginTop="51dp"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="250dp"
            android:layout_height="61dp"
            android:id="@+id/parkloc"
            android:text="Current Parking Location"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@+id/imageButtonFind"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-black" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#3c4b94"
            android:weightSum="1">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/unparkbutton"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/settingimg"
        android:src="@drawable/settings"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E2"
        android:id="@+id/textView5"
        android:layout_alignStart="@+id/imageButtonFind"
        android:layout_marginTop="450dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_marginLeft="-40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LG"
        android:id="@+id/textView5x"
        android:layout_alignStart="@+id/imageButtonFind"
        android:layout_marginTop="450dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_marginLeft="60dp" />

</RelativeLayout>


